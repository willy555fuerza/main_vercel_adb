<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <meta content="" name="keywords" />
    <meta content="" name="description" />
    <%- include('partials/links/links') %>
  </head>

  <body>
    <!-- Content Padre Start -->
    <div class="container-fluid position-relative d-flex p-0 padre">
      <%- include('partials/navegacion/sidebar') %>
      <!-- Content Start -->
      <div class="content position-relative">
        <%- include('partials/navegacion/navbar') %> 
        
        <!-- Chart Start -->
        <div class="container-fluid pt-4 px-4">
            <div class="row g-4">
                <div class="col-sm-6 col-xl-12">
                  <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                    <h6 class="mb-0">Informacion personal</h6>
                  </div>
                </div>
                
                <div class="col-sm-12 col-xl-6">
                    <div class="bg-secondary rounded h-100 p-4">
                        <h6 class="mb-4">Datos</h6>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control pe-none" id="nombres"
                                placeholder="............"  >
                            <label for="floatingInput">Nombres:</label>
                        </div>
                        <div class="form-floating mb-3">
                          <input type="text" class="form-control pe-none" id="apellidos"
                              placeholder="............"  >
                          <label for="floatingInput">Apellidos:</label>
                        </div>
                        <div class="form-floating mb-3">
                          <input type="text" class="form-control pe-none" id="usuario" 
                              placeholder="............"  >
                          <label for="floatingInput">Usuario:</label>
                        </div>
                        <div class="form-floating mb-3">
                          <input type="text" class="form-control pe-none" id="perfil"
                              placeholder="............"  >
                          <label for="floatingInput">Pefil:</label>
                        </div>
                        <div class="form-floating mb-3">
                          <input type="text" class="form-control pe-none" id="fecha"
                              placeholder="............"  >
                          <label for="floatingInput">Fecha de registro:</label>
                        </div>
                    </div>
                </div>
  
                <div class="col-sm-12 col-xl-6">
                  <div class="bg-secondary rounded h-100 p-4">
                      <h6 class="mb-4">Cambiar Contraseña</h6>
                      <form id="change-password-form">
                          <div class="mb-3">
                            <div class="form-floating mb-3">
                              <input type="password" class="form-control" id="contraseña_actual"
                                  placeholder="Contraseña actual" value="" >
                              <label for="floatingInput">Contraseña actual:</label>
                            </div>
                            <!-- <div class="form-text">We'll never share your email with anyone else.
                            </div> -->
                          </div>
                          <div class="mb-3">
                            <div class="form-floating mb-3">
                              <input type="password" class="form-control" id="nueva_contraseña"
                                  placeholder="Nueva contraseña" value="" >
                              <label for="floatingInput">Nueva contraseña:</label>
                            </div>
                            <!-- <div class="form-text">We'll never share your email with anyone else.
                            </div> -->
                          </div>
                          <div class="mb-3">
                            <div class="form-floating mb-3">
                              <input type="password" class="form-control" id="confirmar_contraseña"
                                  placeholder="Confirmar contraseña" value="" >
                              <label for="floatingInput">Confirmar contraseña:</label>
                            </div>
                            <!-- <div class="form-text">We'll never share your email with anyone else.
                            </div> -->
                          </div>
                          <button type="submit" class="btn btn-primary">Confirmar</button>
                      </form>
                  </div>
                </div>
  
            </div>
          </div>
          <!-- Chart End -->

        
        <%- include('partials/footer/footer') %>
      </div>
      <!-- Content End -->
      <!-- Back to Top -->
      <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"
        ><i class="bi bi-arrow-up"></i
      ></a>
      <!-- Back to Top -->
    </div>
    <!-- Content Padre End -->
    <%- include('partials/scripts/scripts') %>
    <script src="/js/perfil.js"></script>
  </body>
</html>
